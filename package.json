{
	"name": "copypasta",
	"displayName": "copyPasta",
	"description": "a visual studio code extension to align your code for clean pasta later",
	"version": "0.1.2",
	"publisher": "kinghat",
	"repository": "https://github.com/kinghat/copyPasta",
	"license": "MIT",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"keywords": [
		"copy",
		"paste",
		"copyPasta",
		"pasta",
		"formatter",
		"clean",
		"code",
		"indentation"
	],
	"activationEvents": [
		"onCommand:extension.copyPasta"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.copyPasta",
				"title": "copyPasta"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.copyPasta",
					"when": "editorHasSelection"
				}
			],
			"editor/context": [
				{
					"when": "editorHasSelection",
					"group": "9_cutcopypaste@9",
					"command": "extension.copyPasta"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.copyPasta",
				"key": "ctrl+shift+c",
				"mac": "cmd+shift+c",
				"when": "editorHasSelection"
			}
		]
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.11",
		"@types/vscode": "^1.40.0",
		"eslint": "^6.6.0",
		"glob": "^7.1.6",
		"mocha": "^6.2.2",
		"typescript": "^3.7.2",
		"vscode-test": "^1.2.3"
	}
}
